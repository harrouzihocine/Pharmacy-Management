<button type="button" class="btn py-1 px-1 ms-2" style="background-color:rgba(255 255 255 / 0.79);" data-bs-toggle="modal" data-bs-target="#addMedicamentModal">
    <img width="29" height="29" src="https://img.icons8.com/ultraviolet/29/enter-2.png" alt="enter-2"/>
  </button>
  
  <div class="modal fade add-storage-modal" id="addMedicamentModal" data-bs-keyboard="true" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
      <div class="modal-content add-storage-page-container">
        <div class="modal-header">
          <h5 class="modal-title">New Admission</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
  
        <div class="modal-body">
          <form id="admissionForm" method="POST" class="add-storage-form row needs-validation" action="/admission/<%=  patient._id %>?serviceABV=<%= serviceABV %>" novalidate>
  
            <!-- admission_date-->
            <div class="form-group col-12">
              <label for="date" class="form-label label-required">Date:</label>
              <input name="date" id="date" class="form-control" type="date" placeholder="Enter admission date" value="<%= admissionDate %>" required />
            </div>
    <!-- Acte -->
    <div class="form-group col-md-12">
        <label for="acte" class="form-label label-required">Acte:</label>
        <input name="acte" id="acte" class="form-control" type="text" placeholder="Enter acte" required />
      </div>
            <!-- Type de admission-->
            <div class="form-group col-6">
              <label for="admissionType" class="form-label label-required">Type d'admission:</label>
              <select name="admissionType" id="admissionType" class="form-control" required>
                <option value="" disabled selected>Select Type</option>
                <option value="Cas Medical">Cas Medical</option>
                <option value="Cas chirurgical">Cas chirurgical</option>   
              </select>
            </div>
  
            <!-- Type de service-->
            <div class="form-group col-md-6">
              <label for="admission-service" class="form-label label-required">Service:</label>
              <select name="service" id="admission-service" class="form-control" required>
                <option value="" disabled selected>Select Service</option>
                <option value="HMU">Hospitalisation multidisciplinaire</option>
                <option value="HCA">Hospitalisation de cardiologie</option>
                <option value="MAT">Maternit√©</option>
              </select>
            </div>
            <input name="pharmacyserviceABV" id="pharmacyserviceABV" class="form-control" type="text" placeholder="Enter admission date" value="<%= serviceABV %>"  hidden/>
            <!-- Submit Button -->
            <div class="form-group mt-4">
              <button type="submit" class="btn btn-primary">Save</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
 