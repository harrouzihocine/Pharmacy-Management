<!-- Button to Trigger Modal for New Patient -->
<button type="button" class="btn demand-new-button" data-bs-toggle="modal" data-bs-target="#newPatient">
  New Patient
</button>

<!-- Modal for New Patient -->
<div class="modal fade add-storage-modal" id="newPatient" data-bs-keyboard="true" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
    <div class="modal-content add-storage-page-container">
      <div class="modal-header">
        <h5 class="modal-title" id="newPatientLabel">New Patient</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <form id="addPatientForm" method="POST" class="add-storage-form row needs-validation" action="/patient" novalidate>

          <!-- Last Name -->
          <div class="form-group col-6">
            <label for="lastName" class="form-label">Last Name</label>
            <input id="lastName" name="patient[lastName]" type="text" class="form-control" style="text-transform: capitalize" required />
            <div class="valid-feedback">Good</div>
          </div>

          <!-- First Name -->
          <div class="form-group col-6">
            <label for="firstName" class="form-label">First Name</label>
            <input id="firstName" name="patient[firstName]" type="text" class="form-control" style="text-transform: capitalize" required />
            <div class="valid-feedback">Good</div>
          </div>


          <!-- Gender -->
          <div class="form-group col-md-6">
            <label for="gender" class="form-label">Gender</label>
            <select id="gender" name="patient[gender]" class="form-select" required>
              <option value="" disabled selected>Select Gender</option>
              <option value="Male">Male</option>
              <option value="Female">Female</option>
            </select>
            <div class="valid-feedback">Good</div>
          </div>

          <!-- Date of Birth -->
          <div class="form-group col-md-6">
            <label for="birthdate" class="form-label">Date of Birth</label>
            <input type="date" class="form-control" id="birthdate" name="patient[birthdate]" required />
            <div class="valid-feedback">Good</div>
          </div>
          <!-- Phone -->
          <div class="form-group col-md-6">
            <label for="phone1" class="form-label">Phone</label>
            <input type="text" class="form-control" id="phone1" name="patient[phone]" maxlength="10" />
            <div class="valid-feedback">Good</div>
          </div>
         
          
           <!-- Address -->
           <div class="form-group col-md-6">
            <label for="address" class="form-label">Address</label>
            <input type="text" class="form-control" id="address" style="text-transform: capitalize" name="patient[address]" />
            <div class="valid-feedback">Good</div>
          </div>

          <!-- Save Button -->
          <button type="submit" class="btn btn-primary">Save</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  $("#newPatient").on("shown.bs.modal", function() {
    $(this).find("[autofocus]").focus();
  });
</script>